<body>

<form id="under13Form">
    <label for="sum_cantos_time1_5">Soma dos Cantos Time 1 - Últimos 5 Jogos:</label>
    <input type="number" id="sum_cantos_time1_5" name="sum_cantos_time1_5" min="0"><br>
    
    <label for="sum_cantos_time2_5">Soma dos Cantos Time 2 - Últimos 5 Jogos:</label>
    <input type="number" id="sum_cantos_time2_5" name="sum_cantos_time2_5" min="0"><br>
    
    <label for="sum_escanteios_h2h_5">Soma dos Escanteios H2H - Últimos 5 Jogos:</label>
    <input type="number" id="sum_escanteios_h2h_5" name="sum_escanteios_h2h_5" min="0"><br>
    
    <button type="button" onclick="verificarUnder13()">Verificar</button>
</form>

<div id="resultado"></div>

<script>
function verificarUnder13() {
    var sum_cantos_time1_5 = parseInt(document.getElementById('sum_cantos_time1_5').value);
    var sum_cantos_time2_5 = parseInt(document.getElementById('sum_cantos_time2_5').value);
    var sum_escanteios_h2h_5 = parseInt(document.getElementById('sum_escanteios_h2h_5').value);
    
    var media_cantos_time1 = sum_cantos_time1_5 / 5;
    var media_cantos_time2 = sum_cantos_time2_5 / 5;
    var media_escanteios_h2h_5 = sum_escanteios_h2h_5 / 5;
    
    var resultadoDiv = document.getElementById('resultado');
    
    if (media_cantos_time1 <= 7 && media_cantos_time2 <= 7 && media_escanteios_h2h_5 < 10) {
        resultadoDiv.textContent = "Cabe under 13";
    } else {
        resultadoDiv.textContent = "Não cabe under 13";
    }
}
</script>

